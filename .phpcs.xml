<?xml version="1.0"?>
<ruleset name="TLMSWpPluginRuleSet">
	<config name="php_version" value="7030" />
	<config name="installed_paths" value="wpcs" />

	<exclude-pattern>/wpcs/*</exclude-pattern>
    <exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/css/*</exclude-pattern>
	<exclude-pattern>/resources/*</exclude-pattern>
	<exclude-pattern>/admin/css/*</exclude-pattern>
	<exclude-pattern>/admin/js/*</exclude-pattern>
    <include-pattern>/admin/*</include-pattern>

	<autoload>/vendor/autoload.php</autoload>

	<rule ref="PSR2">
        <exclude name="PSR1.Methods.CamelCapsMethodName" />
        <exclude name="PSR1.Files.SideEffects" />
    </rule>

	<ini name="memory_limit" value="512M" />

    <rule ref="Generic.PHP.LowerCaseConstant" />
    <rule ref="Generic.Files.LineEndings" />
    <rule ref="Squiz.PHP.GlobalKeyword" />
    <rule ref="PSR2.Files.EndFileNewline" />
    <rule ref="Generic.WhiteSpace.DisallowTabIndent" />
</ruleset>
